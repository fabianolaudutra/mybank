<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> Cliente Salvo</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Nome %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :Gerente %>
    <p><%=form.collection_select(:id_manager, Manager.all , :id, :name, {:prompt => 'Selecione o gerente.'}) %></p>

  </div>

  <div class="field">
    <%= form.label :Descrição %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit   %>
  </div>
<% end %>
