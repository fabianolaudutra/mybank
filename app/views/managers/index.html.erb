<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<br />



<h1>Gerentes</h1>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.name %></td>
        <td><%= manager.email %></td>
        <td><%= manager.description %></td>
        <td><%= link_to 'Visualizar', manager %></td>
        <td><%= link_to 'Editar', edit_manager_path(manager) %></td>
        <td><%= link_to 'Excluir', manager, method: :delete, data: { confirm: 'Você têm certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Gerente', new_manager_path %>
